<div class="page-header">
  <h1>Comments<h1>
</div>
<h3><%= @asm.title %></h3>
<p class="well"><%= @asm.description.html_safe %></p>

<form>
  <% if @question.class == Mcq %>
    <%= render "training_submissions/do_mcq" %>
  <% elsif @question.class == CodingQuestion %>
    <%= render "training_submissions/do_coding" %>
  <% end %>
</form>

<%= render partial: "comments/list",
           locals: { comments:  @comment_topic.comments_json,
                     target:    @question,
                     header:    "Comments on the Question",
                     margin_left: "0px" } %>
